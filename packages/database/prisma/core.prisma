generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
  output   = "../generated/core-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_CORE")
  extensions = [vector]
}

model Node {
  id          String   @id @default(cuid())
  topic       String
  description String?
  
  // Structured memory fields replacing simple 'state'
  coreContext       String   @db.Text  // The essential topic/conversation essence - never decays
  workingMemory     String   @db.Text  // Recent compressed state
  keyFacts          String[] // Important extracted facts as array
  messageCount      Int      @default(0)
  lastSummaryAt     Int      @default(0)  // Message count when last summarized
  
  embedding   Unsupported("vector(1536)")?
  model       String   @default("claude-sonnet-4-5-20250929")
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  messages    Message[]
}

model Message {
  id        String   @id @default(cuid())
  content   String   @db.Text
  createdAt DateTime @default(now())
  
  userId    String
  // User relation removed as it's in a different DB. We just store the ID.
  
  nodeId    String
  node      Node     @relation(fields: [nodeId], references: [id])
  
  targetNodeVersion Int

  status    String   @default("PENDING")
}
